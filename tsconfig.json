{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es6", "dom"],
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": [
      "jest",
      "react",
      "react-native",
      "react-test-renderer"
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__mocks__/**"
  ],
  "include": [
    "src/**/*",
    "index.d.ts",
    "App.tsx"
  ]
}